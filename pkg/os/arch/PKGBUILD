# Maintainer: Kevin K. <kbknapp at google mail> 

_pkgname=docli
pkgname=${_pkgname}-git
pkgver=0.1.0-alpha
pkgrel=1
pkgdesc='command line utility for managing digitalocean infrastructure'
arch=('i686' 'x86_64')
url="https://github.com/kbknapp/${_pkgname}-rs"
license=('MIT')
makedepends=('git' 'cargo' 'rust')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
source=("git://github.com/kbknapp/${_pkgname}-rs.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  git rev-list --count HEAD
}

build() {
  cd "$srcdir/$_pkgname"
  cargo build --release
}

package() {
  cd "$srcdir/$_pkgname"
  mkdir -p "${pkgdir}/usr/bin"
  cp -p "target/release/${_pkgname}" "${pkgdir}/usr/bin"
}